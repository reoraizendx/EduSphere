<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/assignment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assignment_title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/assignment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assignment_description"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/uploaded_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_file_uploaded"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_file"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_assignment" />
</LinearLayout>
